<?php

$router->get('/', function () use ($router) {
    return $router->app->version();
});

$router->get('test', function () use ($router) {
    return ['works' => true];
});

//Kallar pÃ¥ funktionerna
$router->get('movie', 'MoviesController@index');
$router->get('movie/{id}', 'MoviesController@idindex');
$router->post('movie', 'MoviesController@create');
$router->put('movie/{id}', 'MoviesController@update');
$router->delete('movie/{id}', 'MoviesController@delete');
